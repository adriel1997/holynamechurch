<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#722f37"
    android:orientation="vertical"
    tools:context="com.hnc.hnc.holynamechurch.faqnsocial">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Follow us on: "
        android:textSize="20dp"
        android:padding="5dp"
        />
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:id="@+id/fb"
        android:background="@drawable/fb"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:id="@+id/insta"
        android:background="@drawable/insta"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:id="@+id/twitter"
        android:background="@drawable/twitter"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:id="@+id/web"
        android:background="@drawable/web"/>
</LinearLayout>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="FAQ:\n\n"
        android:textSize="20dp"
        android:padding="5dp"
		android:id="@+id/faqinfo"
        />
</LinearLayout>
